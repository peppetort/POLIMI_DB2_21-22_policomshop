<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <filter>
        <filter-name>LoggedInCheck</filter-name>
        <filter-class>filters.LoggedInCheck</filter-class>
    </filter>
    <filter>
        <filter-name>NotLoggedInCheck</filter-name>
        <filter-class>filters.NotLoggedInCheck</filter-class>
    </filter>
    <filter>
        <filter-name>InvalidateBuyProcess</filter-name>
        <filter-class>filters.InvalidateBuyProcess</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>InvalidateBuyProcess</filter-name>
        <url-pattern>/Employee/*</url-pattern>
        <servlet-name>GetHome</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>InvalidateBuyProcess</filter-name>
        <servlet-name>Logout</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>InvalidateBuyProcess</filter-name>
        <servlet-name>SignUp</servlet-name>
    </filter-mapping>

    <filter-mapping>
        <filter-name>LoggedInCheck</filter-name>
        <servlet-name>Payment</servlet-name>
    </filter-mapping>
    <filter-mapping>

        <filter-name>NotLoggedInCheck</filter-name>
        <servlet-name>SignIn</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>NotLoggedInCheck</filter-name>
        <servlet-name>SignUp</servlet-name>
    </filter-mapping>
</web-app>